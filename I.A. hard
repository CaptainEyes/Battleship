#include <stdio.h>
#include <stdlib.h>
#include <time.h>

    int nombre_x = 0;
    int nombre_y = 0;

int TirRandom()
{

    int c = 11;

    srand(time(NULL));                  // initialisation de rand


        nombre_x = rand()%c;
        while (nombre_x == 0)           //empeche d'avoir un zero
        {
            nombre_x = rand()%c;
        }

        nombre_y = rand()%c;

        while (nombre_y == 0)            //empeche d'avoir un zero
        {
            nombre_y = rand()%c;
        }

        printf("Tir en (%d:%d) \n ",nombre_x,nombre_y);
}

int main()
{

        int touche;
        int nombre_y1;
        int nombre_x1;
        TirRandom();
        nombre_x1 = nombre_x;
        nombre_y1 = nombre_y;
        printf("Touché? (1 ou 0) \n");
        scanf("%d",&touche);
        if(touche==1)       //tir à droite
        {
            nombre_y1 = nombre_x1 + 1;
            printf("Tir en (%d:%d)\n",nombre_x1,nombre_y1);
            printf("Touché? (1 ou 0) \n");
            scanf("%d",&touche);
        }


            if(touche==0)       //tir en bas
            {
               nombre_x1 = nombre_x1 - 1;
               nombre_y1 = nombre_y1 + 1;
               printf("Tir en (%d:%d)\n",nombre_x1,nombre_y1);
               printf("Touché? (1 ou 0) \n");
               scanf("%d",&touche);
            }
            else
            {
                while(touche==1)            //tir continue à droite
                {
                    nombre_y1 = nombre_x1 + 1;
                    printf("Tir en (%d:%d)\n",nombre_x1,nombre_y1);
                    printf("Touché? (1 ou 0) \n");
                    scanf("%d",&touche);
                }
            }

                if(touche ==0)               //tir à gauche
                {
                    nombre_y1 = nombre_y1 - 1;
                    nombre_x1 = nombre_x1 - 1;
                    printf("Tir en (%d:%d)\n",nombre_x1,nombre_y1);
                    printf("Touché? (1 ou 0) \n");
                    scanf("%d",&touche);
                }
                 else
                    {
                    while(touche==1)            // tir continue en bas
                    {
                        nombre_y1 = nombre_y1 + 1;
                        printf("Tir en (%d:%d)\n",nombre_x1,nombre_y1);
                        printf("Touché? (1 ou 0) \n");
                        scanf("%d",&touche);
                    }
                    }


                    if (touche==0)
                    {
                        nombre_x1 = nombre_x1 + 1;              //tir en haut
                        nombre_y1 = nombre_y1 - 1;
                        printf("Tir en (%d:%d)\n",nombre_x1,nombre_y1);
                    }





}



